{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Example App",
    "version": "0.1.0",
    "identifier": "com.tauri.hortonew.com",
    "build": {
        "frontendDist": "../ui"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Spaced Repetition App",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "visible": true,
                "transparent": false,
                "decorations": true,
                "alwaysOnTop": false,
                "skipTaskbar": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}